<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="25dp">


    <android.support.v7.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="225dp"
            android:layout_height="229dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            android:id="@+id/cardView2"
            app:layout_constraintHorizontal_bias="0.504" android:layout_marginTop="200dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.017"/>
    <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="52dp"
            android:layout_height="24dp"
            android:layout_margin="20dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintBottom_toTopOf="@+id/cardView2" android:layout_marginBottom="8dp"/>

    <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/btn0" android:textSize="36sp"
            app:layout_constraintStart_toStartOf="@+id/cardView2"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/cardView2"/>
    <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/btn1" android:textSize="36sp"
            app:layout_constraintStart_toEndOf="@+id/btn0"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/cardView2"/>
    <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/btn2" android:textSize="36sp"
            app:layout_constraintStart_toEndOf="@+id/btn1"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/cardView2"/>
    <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/btn3" android:textSize="36sp"
            app:layout_constraintStart_toStartOf="@+id/cardView2"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn0"/>
    <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/btn4" android:textSize="36sp"
            app:layout_constraintStart_toEndOf="@+id/btn3"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn1"/>
    <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/btn5" android:textSize="36sp"
            app:layout_constraintStart_toEndOf="@+id/btn4"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn2" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/cardView2"/>
    <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/btn6" android:textSize="36sp"
            app:layout_constraintStart_toStartOf="@+id/cardView2"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn3"/>
    <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/btn7" android:textSize="36sp"
            app:layout_constraintStart_toEndOf="@+id/btn6"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn4"/>
    <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/btn8" android:textSize="36sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardView2" app:layout_constraintStart_toEndOf="@+id/btn7"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn5"/>
    <TextView
            android:text='Player "Xs" turn'
            android:layout_width="242dp"
            android:layout_height="59dp"
            android:id="@+id/activePlayerName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginTop="120dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.418"
            android:textSize="36sp"/>
    <TextView
            android:text="Leaderboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leaderboardText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="18sp"
            app:layout_constraintVertical_bias="0.063"/>
    <Button
            android:text="Reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resetBtn" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>