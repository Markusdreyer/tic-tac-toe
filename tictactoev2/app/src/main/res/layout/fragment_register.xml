<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/registerBackground"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="25dp">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:id="@+id/player1View"
            android:layout_marginBottom="219dp" app:layout_constraintBottom_toBottomOf="@+id/player2View">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="304dp" app:layout_constraintStart_toEndOf="@+id/guideline5"
                app:layout_constraintEnd_toEndOf="@+id/guideline5">

            <android.support.constraint.Guideline android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content"
                                                  android:id="@+id/guideline5"
                                                  android:orientation="vertical"
                                                  app:layout_constraintGuide_begin="192dp"/>
            <android.support.constraint.Guideline android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content"
                                                  android:id="@+id/guideline4"
                                                  android:orientation="vertical"
                                                  app:layout_constraintGuide_begin="56dp"/>
            <android.support.constraint.Guideline android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content"
                                                  android:id="@+id/guideline2"
                                                  android:orientation="vertical"
                                                  app:layout_constraintGuide_end="56dp"/>
            <TextView
                    android:text="Player O"
                    android:layout_width="93dp"
                    android:layout_height="30dp"
                    android:id="@+id/player1Text" android:textSize="24sp"
                    android:textColor="#FF000000"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.501"/>
            <Button
                    android:text="Existing"
                    android:layout_width="136dp"
                    android:layout_height="48dp"
                    android:id="@+id/existingPlayer1Btn"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/player1Input"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="56dp"/>
            <Button
                    android:text="New"
                    android:layout_width="135dp"
                    android:layout_height="48dp"
                    android:id="@+id/newPlayer1Btn"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/player1Input"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="56dp"/>
            <EditText
                    android:layout_width="203dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/player1Input"
                    android:hint="Name"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.503"
                    android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/player1Text"
            />
            <Spinner
                    android:layout_width="368dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/playerSpinner" android:visibility="invisible"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:spinnerMode="dialog"/>
            <Button
                    android:text="Change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/player1Change" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/player1Input"
                    android:visibility="invisible"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:id="@+id/player2View"
            android:visibility="visible" android:layout_marginTop="254dp" app:layout_constraintTop_toTopOf="parent">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="304dp" app:layout_constraintStart_toEndOf="@+id/guideline15"
                app:layout_constraintEnd_toEndOf="@+id/guideline15">

            <android.support.constraint.Guideline android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content"
                                                  android:id="@+id/guideline15"
                                                  android:orientation="vertical"
                                                  app:layout_constraintGuide_begin="192dp"/>
            <android.support.constraint.Guideline android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content"
                                                  android:id="@+id/guideline14"
                                                  android:orientation="vertical"
                                                  app:layout_constraintGuide_begin="56dp"/>
            <android.support.constraint.Guideline android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content"
                                                  android:id="@+id/guideline12"
                                                  android:orientation="vertical"
                                                  app:layout_constraintGuide_end="56dp"/>
            <TextView
                    android:text="Player X"
                    android:layout_width="93dp"
                    android:layout_height="30dp"
                    android:id="@+id/player2Text" android:textSize="24sp"
                    android:textColor="#FF000000"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.501"/>
            <Button
                    android:text="Existing"
                    android:layout_width="136dp"
                    android:layout_height="48dp"
                    android:id="@+id/existingPlayer2Btn"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/player2Input"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="56dp"/>
            <Button
                    android:text="New"
                    android:layout_width="135dp"
                    android:layout_height="48dp"
                    android:id="@+id/newPlayer2Btn"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/player2Input"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="56dp"/>
            <EditText
                    android:layout_width="203dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/player2Input"
                    android:hint="Name"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.503"
                    android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/player2Text"
            />
            <Button
                    android:text="Change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/player2Change" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/player2Input" android:visibility="invisible"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:id="@+id/startGameView" android:layout_marginTop="230dp"
            app:layout_constraintTop_toTopOf="@+id/player2View">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:text="Start Game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nextBtn" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
